{
    "name": "finance-manager",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve -o",
        "start-prod": "ng serve -o --configuration production",
        "build": "ng build --prod",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "lint": "eslint --ext .ts ./src",
        "prettier": "prettier --write .",
        "source-map-explorer": "source-map-explorer dist/financeManager/**/*.js"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "~12.2.0",
        "@angular/cdk": "~12.2.13",
        "@angular/common": "~12.2.0",
        "@angular/compiler": "~12.2.0",
        "@angular/core": "~12.2.0",
        "@angular/flex-layout": "^13.0.0-beta.36",
        "@angular/forms": "~12.2.0",
        "@angular/localize": "~12.2.0",
        "@angular/material": "~12.2.13",
        "@angular/platform-browser": "~12.2.0",
        "@angular/platform-browser-dynamic": "~12.2.0",
        "@angular/router": "~12.2.0",
        "@ngneat/until-destroy": "^9.0.0",
        "@ngrx/effects": "^13.0.1",
        "@ngrx/store": "^13.0.1",
        "ag-grid-angular": "^26.1.0",
        "ag-grid-community": "^26.1.0",
        "chart.js": "^3.6.2",
        "rxjs": "~6.6.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~12.2.9",
        "@angular/cli": "~12.2.9",
        "@angular/compiler-cli": "~12.2.0",
        "@ngrx/store-devtools": "^13.0.1",
        "@types/jasmine": "~3.8.0",
        "@types/node": "^12.11.1",
        "@typescript-eslint/eslint-plugin": "^5.5.0",
        "@typescript-eslint/parser": "^5.5.0",
        "eslint": "^8.4.0",
        "jasmine-core": "~3.8.0",
        "karma": "~6.3.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.0.3",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "~1.7.0",
        "prettier": "^2.5.1",
        "source-map-explorer": "^2.5.2",
        "typescript": "~4.3.5"
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": [
                "./tsconfig.json"
            ]
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "@typescript-eslint/strict-boolean-expressions": [
                2,
                {
                    "allowString": false,
                    "allowNumber": false
                }
            ]
        },
        "ignorePatterns": [
            "src/**/*.test.ts",
            "src/frontend/generated/*"
        ]
    }
}
